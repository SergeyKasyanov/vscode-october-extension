# ===================================
#  Form Behavior Config
# ===================================

# Record name
name: {{ model_pascal }}

# Model Form Field configuration
form: $/{{ author_lower }}/{{ plugin_lower }}/models/{{ model_lower }}/fields.yaml

# Model Class name
modelClass: {{ author_pascal }}\{{ plugin_pascal }}\Models\{{ model_pascal }}

# Default redirect location
defaultRedirect: {{ author_lower }}/{{ plugin_lower }}/{{ controller_lower }}

# Create page
create:
    title: backend::lang.form.create_title
    redirect: {{ author_lower }}/{{ plugin_lower }}/{{ controller_lower }}/update/:id
    redirectClose: {{ author_lower }}/{{ plugin_lower }}/{{ controller_lower }}

# Update page
update:
    title: backend::lang.form.update_title
    redirect: {{ author_lower }}/{{ plugin_lower }}/{{ controller_lower }}
    redirectClose: {{ author_lower }}/{{ plugin_lower }}/{{ controller_lower }}

# Preview page
preview:
    title: backend::lang.form.preview_title
